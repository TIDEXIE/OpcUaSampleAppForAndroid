<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/current_server_information"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:gravity="top|left"
            android:maxLines="4"
            android:minLines="1"
            android:overScrollMode="ifContentScrolls"
            android:padding="3dp"
            android:singleLine="false"
            android:text="@string/current_node_information"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black"></TextView>

        <TextView
            android:id="@+id/current_server_information_url"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:gravity="top|left"
            android:maxLines="4"
            android:minLines="1"
            android:overScrollMode="ifContentScrolls"
            android:padding="10dp"
            android:singleLine="false"

            android:text="@string/connected_url_name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black"></TextView>

        <TextView
            android:id="@+id/url_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:singleLine="false"
            android:text="opc.tcp://198.162.1.2/OPCUA/SampleConsoleServer"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black"
            android:textStyle="bold">

        </TextView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#586cf3">

            <TextView
                android:id="@+id/line"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="3dp"
                android:singleLine="true"
                android:text="@string/listofsubnode"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black"></TextView>
        </LinearLayout>

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:cacheColorHint="#00000000"
            android:divider="#0012ff"
            android:dividerHeight="1px"></ListView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <Button
                android:id="@+id/home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/home">

            </Button>

            <Button
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/back">

            </Button>

        </LinearLayout>


    </LinearLayout>

</LinearLayout><!-- From: file:/Users/haripriyasaranya/AndroidStudioProjects/OpcUaSampleAppForAndroid/app/src/main/res/layout/read_information_layout.xml -->