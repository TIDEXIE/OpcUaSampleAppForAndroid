<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/serverTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time_on_server"
        android:textAppearance="?android:attr/textAppearanceLarge"></TextView>

    <CheckedTextView
        android:id="@+id/serverTimeField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/init_time_string"></CheckedTextView>

    <Button
        android:id="@+id/connectAndReadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/connect_and_read"></Button>
</LinearLayout>
